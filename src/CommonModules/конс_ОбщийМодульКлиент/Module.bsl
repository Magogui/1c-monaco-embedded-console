Асинх Процедура ВызватьКонструкторЗапроса(Форма, ПараметрыВызова = Неопределено) Экспорт
	
	ДанныеЗапроса = ДанныеДляКонструктораЗапроса(ПараметрыВызова, Форма);

	ДопПараметры = Новый Структура;
	ДопПараметры.Вставить("Форма", Форма);
	ДопПараметры.Вставить("НачальнаяПозиция", ДанныеЗапроса.НачальнаяПозиция);
	ДопПараметры.Вставить("КонечнаяПозиция", ДанныеЗапроса.КонечнаяПозиция);
	ДопПараметры.Вставить("ТекстЗапроса", ДанныеЗапроса.ТекстЗапроса);
	
	ТекстЗапроса = ДопПараметры.ТекстЗапроса;
	Если Не ЗначениеЗаполнено(ТекстЗапроса) Тогда
		Результат = Ждать ВопросАсинх("Не найден текст запроса." + Символы.ПС + "Создать новый запрос?", РежимДиалогаВопрос.ДаНет);
		
		Если Результат = КодВозвратаДиалога.Да Тогда
			ОткрытьКонструкторЗапроса("", ДопПараметры);
		КонецЕсли;
	Иначе
		ПодготовитьТекстЗапросаККонструкторуЗапросов(ТекстЗапроса, Форма);
		ОткрытьКонструкторЗапроса(ТекстЗапроса, ДопПараметры);
	КонецЕсли;
	
КонецПроцедуры

Функция ДанныеДляКонструктораЗапроса(Знач ПараметрыВызова, Знач Форма)
	
	ТекстЗапроса = "";
	НачальнаяПозиция = 0;
	КонечнаяПозиция = 0;
	Если ПараметрыВызова = Неопределено Тогда
		
		Если View(Форма).queryMode Тогда
			ТекстЗапроса = ПолучитьТекст(Форма);
		Иначе
			// Попытаемся извлечь текст запроса из выделенного текста
			ТекстЗапроса = конс_ОбщийМодульКлиент.ПолучитьВыделенныйТекст(Форма);
			
			Строки = конс_ОбщийМодульКлиент.ПолучитьНомераСтрокВыделения(Форма);
			НачальнаяПозиция = Строки.startLine;
			КонечнаяПозиция = Строки.endLine;
		КонецЕсли;
		
	Иначе
		НачальнаяПозиция = ПараметрыВызова.range.startLineNumber;
		КонечнаяПозиция = ПараметрыВызова.range.endLineNumber;
		ТекстЗапроса = ПараметрыВызова.text;
	КонецЕсли;
	
	ДанныеЗапроса = Новый Структура;
	ДанныеЗапроса.Вставить("НачальнаяПозиция", НачальнаяПозиция);
	ДанныеЗапроса.Вставить("КонечнаяПозиция", КонечнаяПозиция);
	ДанныеЗапроса.Вставить("ТекстЗапроса", ТекстЗапроса);
	
	Возврат ДанныеЗапроса;

КонецФункции

Процедура ПодготовитьТекстЗапросаККонструкторуЗапросов(ТекстЗапроса, Форма)
	
	Если НЕ View(Форма).queryMode Тогда
		ТекстЗапроса = СтрЗаменить(ТекстЗапроса, "|", "");
		ТекстЗапроса = СтрЗаменить(ТекстЗапроса, """""", "$");
		ТекстЗапроса = СтрЗаменить(ТекстЗапроса, """", "");
		ТекстЗапроса = СтрЗаменить(ТекстЗапроса, "$", """");
	КонецЕсли;
	
КонецПроцедуры

Процедура ПодготовитьТекстЗапросаКРедакторуКода(ТекстЗапроса, Форма)
	
	Если Не View(Форма).queryMode Тогда
		ТекстЗапроса = СтрЗаменить(ТекстЗапроса, Символы.ПС, Символы.ПС + "|");
		ТекстЗапроса = СтрЗаменить(ТекстЗапроса, """", """""");
		ТекстЗапроса = """" + ТекстЗапроса + """";
	КонецЕсли;
	
КонецПроцедуры

Асинх Процедура ОткрытьКонструкторЗапроса(ТекстЗапроса, ДопПараметры)
	
	Форма = ДопПараметры.Форма;
	
	Попытка
		Конструктор = Новый КонструкторЗапроса(ТекстЗапроса);
	Исключение
		Инфо = ИнформацияОбОшибке();
		ПоказатьПредупреждение( , "Ошибка в тексте запроса:" + Символы.ПС + Инфо.Причина.Описание);
		Возврат;
	КонецПопытки;
	
	ТекстЗапроса = Ждать Конструктор.ОткрытьАсинх();
	
	УстановитьТекстЗапроса(ТекстЗапроса, ДопПараметры);
	
КонецПроцедуры

Процедура УстановитьТекстЗапроса(ТекстЗапроса, Знач ДопПараметры)
	
	Форма = ДопПараметры.Форма;
	
	Если ТекстЗапроса <> Неопределено Тогда
		
		Если View(Форма).queryMode Тогда
			ОчиститьТекст(Форма);
			УстановитьТекст(Форма, ТекстЗапроса, Неопределено, Истина);
		Иначе
			ПодготовитьТекстЗапросаКРедакторуКода(ТекстЗапроса, Форма);
			ЗаменитьТекстПоНомерамСтрок(Форма, ТекстЗапроса, ДопПараметры.НачальнаяПозиция, ДопПараметры.КонечнаяПозиция);
		КонецЕсли;
		
	КонецЕсли;

КонецПроцедуры

